<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.matchfinder.jan.t9_mobileapp.menu.menu_settings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="0dp">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scrollview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:text="Toolbar Color Change"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/defaultButton"
                    android:layout_width="85dp"
                    android:layout_height="37dp"
                    android:text="Default" />

                <Button
                    android:id="@+id/redButton"
                    android:layout_width="85dp"
                    android:layout_height="37dp"
                    android:layout_marginHorizontal="150dp"
                    android:text="Red"/>

                <Button
                    android:id="@+id/yellowButton"
                    android:layout_width="85dp"
                    android:layout_height="37dp"
                    android:layout_marginHorizontal="320dp"
                    android:text="Yellow"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="40dp"
                    android:text="Send us your Feedback"
                    tools:ignore="HardcodedText"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:text="admin@bolzerapp.com"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/sendTo"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Subject"
                    android:ems="10"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/subject"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:hint="Write your message..."
                    android:ems="16"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/EmailText"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="23dp"
                    android:layout_marginVertical="90dp"
                    android:layout_marginStart="155dp"
                    android:text="Send"
                    android:id="@+id/sendEmail"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>