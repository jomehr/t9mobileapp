<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="InvalidId">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnProfile"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_person_black_72dp"
            android:padding="6dp"
            android:text="@string/home_profile"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="16sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/btnTeam"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_group_black_72dp"
            android:padding="6dp"
            android:text="@string/home_team"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="16sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/btnEventRadar"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_explore_black_72dp"
            android:padding="6dp"
            android:text="@string/home_eventradar"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="16sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/btnLeague"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_star_black_72dp"
            android:padding="6dp"
            android:text="@string/home_league"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="16sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_search_black_72dp"
            android:padding="6dp"
            android:text="@string/home_search"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="16sp"
            android:typeface="sans" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>