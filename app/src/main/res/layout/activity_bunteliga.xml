<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kick_it.jan.t9_mobileapp.aktivitaeten.BunteLiga">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/newsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--buggy mit goÃŸen bitmaps
        <ImageView
        android:id="@+id/backgroundimageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/screen_background3"
        android:scaleType="centerCrop"/>-->

    <RelativeLayout
        android:background="@drawable/border_shadow"
        android:id="@+id/newsContainer"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/banner_img2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/profilpic"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/banner_text1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimaryOpacity"
            android:gravity="bottom|left"
            android:padding="4dp"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:text="@string/leaguenews"
            android:textAlignment="gravity"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/border_shadow"
        android:id="@+id/searchTeamContainer"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newsContainer"
        android:focusable="true">

        <ImageView
            android:id="@+id/banner_image2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/banner_team"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/banner_text2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimaryOpacity"
            android:gravity="bottom|right"
            android:padding="4dp"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:text="@string/search_teams"
            android:textAlignment="gravity"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/banner_image2" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/border_shadow"
        android:id="@+id/tableContainer"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchTeamContainer" android:focusable="true">

        <ImageView
            android:id="@+id/banner_image3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/banner_liga"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/banner_text3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimaryOpacity"
            android:gravity="bottom|left"
            android:padding="4dp"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:text="@string/team_tabels"
            android:textAlignment="gravity"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/banner_image3" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/border_shadow"
        android:id="@+id/teamContainer"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableContainer" android:focusable="true">

        <ImageView
            android:id="@+id/team_btnImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/banner_teams2"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/team_btntext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimaryOpacity"
            android:gravity="bottom|right"
            android:padding="4dp"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:text="@string/your_team"
            android:textAlignment="gravity"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/team_btnImage" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
