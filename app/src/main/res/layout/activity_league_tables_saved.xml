<?xml version="1.0" encoding="utf-8"?>
<!-- Static screen, needs to be dynamic to parse databank entries over-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.matchfinder.jan.t9_mobileapp.aktivitaeten.LeagueTables">

    <include layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:background="@drawable/border_shadow"
                android:id="@+id/firstleague"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                android:onClick="expandableFirstLeague"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:contentDescription="@string/button_image"
                    android:id="@+id/firstleague_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@raw/profilpic"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/fistleague_txt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:background="@color/colorPrimaryOpacity"
                    android:gravity="bottom|start"
                    android:padding="4dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="1. Liga"
                    android:textAlignment="gravity"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expandableLayout1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="40dp"
                app:ael_duration="800"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical">
                <android.support.v4.widget.NestedScrollView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TableLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TableRow
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <TextView
                                android:id="@+id/leagueplacenumber"
                                android:layout_marginEnd="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Platz"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_marginEnd="5dp"
                                android:id="@+id/leagueteamname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Team"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/leaguegamesplayed"
                                android:layout_marginEnd="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Spiele"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/leaguegoaldifference"
                                android:layout_marginEnd="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Tordifferenz"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/leaguepoints"
                                android:layout_marginEnd="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Punkte"
                                tools:ignore="HardcodedText" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/firstleagueTable"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:divider="#00000000"
                            android:dividerHeight="16dp">
                        </TableRow>
                    </TableLayout>
                </android.support.v4.widget.NestedScrollView>

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

            <RelativeLayout
                android:background="@drawable/border_shadow"
                android:id="@+id/secondLeague"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                android:onClick="expandableSecondLeague"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:contentDescription="@string/button_image"
                    android:id="@+id/secondleague_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@raw/profilpic"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/secondleague_txt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:background="@color/colorPrimaryOpacity"
                    android:gravity="bottom|start"
                    android:padding="4dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="2. Liga"
                    android:textAlignment="gravity"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expandableLayout2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="40dp"
                app:ael_duration="800"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical">
                <android.support.v4.widget.NestedScrollView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TableLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <TextView
                                android:id="@+id/textView80"
                                android:layout_marginEnd="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Platz"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_marginEnd="5dp"
                                android:id="@+id/textView70"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Team"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/textfasdView6sdf0"
                                android:layout_marginEnd="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Spiele"
                                tools:ignore="HardcodedText,TooManyViews" />

                            <TextView
                                android:id="@+id/textView61"
                                android:layout_marginEnd="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Tordifferenz"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/textView104"
                                android:layout_marginEnd="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Punkte"
                                tools:ignore="HardcodedText" />
                        </TableRow>


                        <ListView
                            android:id="@+id/secondleagueTable"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:divider="#00000000"
                            android:dividerHeight="16dp">
                        </ListView>
                    </TableLayout>
                </android.support.v4.widget.NestedScrollView>
            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

            <RelativeLayout
                android:background="@drawable/border_shadow"
                android:id="@+id/thirdLeagueBox"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                android:onClick="expandableThirdLeague"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:contentDescription="@string/button_image"
                    android:id="@+id/thirdleague_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@raw/profilpic"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/thirdleague_txt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:background="@color/colorPrimaryOpacity"
                    android:gravity="bottom|start"
                    android:padding="4dp"
                    android:paddingLeft="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp"
                    android:text="3. Liga"
                    android:textAlignment="gravity"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expandableLayout3"
                android:layout_marginStart="40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:ael_duration="400"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical">

                <android.support.v4.widget.NestedScrollView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TableLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_marginEnd="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Platz"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_marginEnd="5dp"
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Team"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_marginEnd="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Spiele"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/textView"
                                android:layout_marginEnd="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Tordifferenz"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_marginEnd="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Punkte"
                                tools:ignore="HardcodedText" />
                        </TableRow>

                        <ListView
                            android:id="@+id/thirdleagueTable"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:divider="#00000000"
                            android:dividerHeight="16dp">
                        </ListView>
                    </TableLayout>
                </android.support.v4.widget.NestedScrollView>
            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>