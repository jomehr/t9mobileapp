<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.jan.t9_mobileapp.Team">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:clickable="true">

        <LinearLayout
            android:id="@+id/spielercontainer1"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">
            <ImageView
                android:id="@+id/spielerbildaufstellung1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="Aufstellung 4"
                android:src="@android:color/background_dark" />

            <TextView
                android:id="@+id/spielernameaufstellung1"
                android:layout_width="277dp"
                android:background="#E2E2E2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Jan Mehr"
                android:paddingEnd="32dp"
                android:textSize="24sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/spielercontainer2"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="Aufstellung 4"
                android:src="@android:color/background_dark" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="277dp"
                android:layout_height="match_parent"
                android:background="#E2E2E2"
                android:gravity="center"
                android:text="Christian Noss"
                android:paddingEnd="32dp"
                android:textSize="24sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/spielercontainer3"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="Aufstellung 4"
                android:src="@android:color/background_dark" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="277dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Christiano Ronaldo"
                android:background="#E2E2E2"
                android:paddingEnd="32dp"
                android:textSize="24sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/spielercontainer4"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="Wiliam Shakespear"
                android:src="@android:color/background_dark" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="277dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Justus Aurelius von AmadeÃ¼s"
                android:background="#E2E2E2"
                android:textSize="24sp"
                android:paddingEnd="32dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/spielercontainer5"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="The Mountain"
                android:src="@android:color/background_dark" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="277dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="The Mountain"
                android:background="#E2E2E2"
                android:textSize="24sp"
                android:paddingEnd="32dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>