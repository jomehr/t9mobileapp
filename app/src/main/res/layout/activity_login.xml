<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_relativeLayout"
    android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin">

    <TextView
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:id = "@+id/login_appName"
        android:text = "Kick It  -  Matchfinder"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal = "true"
        android:textColor = "@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textSize = "35dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/login_imageView"
        android:src="@mipmap/ic_launcher_foreground"
        android:layout_below="@+id/login_appName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/login_loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below = "@+id/login_imageView"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryText"
        android:textSize="35dp" />

    <CheckBox
        android:id="@+id/login_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/login_imageView"
        android:layout_marginTop="12dp"
        android:text="Auto-Login"
        android:textSize="12sp"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint="@color/colorSecondaryText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_inputEmail"
        android:hint="Email eingeben"
        android:inputType="textEmailAddress"
        android:textSize = "18dp"
        android:layout_below="@+id/login_loginText"
        android:focusable = "true"
        android:textColorHighlight = "@color/colorAccent"
        android:textColorHint = "@color/colorSecondaryText"
        android:layout_marginTop = "12dp"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_inputPassword"
        android:hint="Passwort eingeben"
        android:textSize = "18dp"
        android:layout_below="@+id/login_inputEmail"
        android:focusable = "true"
        android:inputType="textPassword"
        android:textColorHighlight = "@color/colorAccent"
        android:textColorHint = "@color/colorSecondaryText"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_loginBtn"
        android:text="Login"
        android:background="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/login_inputPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_registerBtn"
        android:text="Noch kein Mitglied? Registriere dich!"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/login_loginBtn"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>